<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FileFly</title>
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-200 flex justify-center items-center h-screen""">
    <div class="max-w-md mx-auto p-8 bg-white shadow rounded-lg sm:px-10">
      <div class="text-3xl mb-5 flex justify-center text-gray-800>"</h1>
        <p class="font-medium">Welcome to FileFly</p>
      </div>
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <div class="form-entry">
          <div class="max-w-xl">
            <label
              for="file"
              class="flex justify-center w-full h-32 px-4 transition bg-white border-2 border-gray-300 border-dashed rounded-md appearance-none cursor-pointer hover:border-gray-400 focus:outline-none"
            >
              <span class="flex items-center space-x-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-gray-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                  />
                </svg>
                <span class="font-medium text-gray-600">
                  Click to attach files
                </span>
              </span>
              <input
                type="file"
                name="file"
                id="file"
                class="hidden"
                required
              />
            </label>
          </div>

        <div class="form-entry mt-5">
          <label for="password" class="text-gray-700 font-medium">Password <span class="text-gray-400 font-normal">(recommended)</span></label><br />
          <div class="mt-1">
          <input type="password" id="password" name="password" class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" />
          </div>
        </div>
        <button
          type="submit"
          class="w-full px-4 py-3 mt-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outlne-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Upload File & Generate Link
        </button>

        <% if (locals.fileLink != null) { %>
        <div class="my-5 text-green-700 font-medium">
          File has been uploaded successfully!
          <div class="copy-link mt-1 flex w-full">
           <input type="text" value="<%= locals.fileLink %>" class="copy-link-input w-full text-gray-700 border border-gray-400 px-3 py-2 shadow-sm focus:outline-none grow border-r-0 hover:bg-gray-200" readonly>
           <button type="button" class="copy-link-button shrink-0 flex items-center justify-center bg">
            <span class="material-icons text-gray-700 border border-gray-300 px-2 py-2 shadow-sm bg-gray-200 border border-gray-400 hover:bg-gray-300">content_copy</span>
          </button>
          </div>
        </div>
        <% } %>
      </form>

      <div class="mt-5">
        <a href="https://github.com/reginaldwong/file-fly" class="text-sky-500 text-sm block text-center" target="_blank">view source code</a>
      </div>
    </div>

    <script>
      document.querySelectorAll(".copy-link").forEach(copyLinkContainer => {
          const inputField = copyLinkContainer.querySelector(".copy-link-input");
          const copyButton = copyLinkContainer.querySelector(".copy-link-button");
          
          inputField.addEventListener("focus", () => inputField.select());
          copyButton.addEventListener("click", () => {
            const text = inputField.value;
            inputField.select();
            navigator.clipboard.writeText(text);
            inputField.value="Link copied!";
            setTimeout(()=> inputField.value=  text, 2000);
          })
      });
    </script>
  </body>
</html>
